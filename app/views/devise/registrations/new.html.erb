<div class="container">
	<div class="row">
    <div class="span4 offset4 well">
    <legend>Please Sign Up</legend>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <%= f.email_field :email, :autofocus => true, :placeholder => "Email", class: "span4" %>
      <%= f.password_field :password, :placeholder => "Password", class: "span4" %>
      <%= f.password_field :password_confirmation, :placeholder => "Confirm Your Password", class: "span4" %>
      <div><%= f.submit "Sign up", class: "btn btn-info" %></div>
    <% end %>
  <%= link_to "Sign In", new_user_session_path %>  | 
  <%= link_to "Forgot your password?", new_user_password_path %>
    </div>
  </div>
</div>
